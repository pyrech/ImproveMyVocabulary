{% block title %}{{ 'title.wordlist.edit'|trans }}{% endblock %}

{% block body -%}
    <div class="page-header">
        <h1>{{ 'title.wordlist.edit'|trans }}</h1>
    </div>

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        <div>
            {{ form_label(edit_form.name, 'field.wordlist.name'|trans) }}
            {{ form_errors(edit_form.name) }}
