{% extends "::base.html.twig" %}
 
{% block title %}{{ 'title.wordlist.index'|trans }}{% endblock %}

{% set _format_datetime = 'format.datetime'|trans %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'title.wordlist.index'|trans }}</h1>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom de la liste</th>
                <th>Nombre de mots</th>
                <th>{{ 'field.entity.createdAt'|trans }}</th>
                <th>{{ 'field.entity.updatedAt'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for wl in wordlists %}
                <tr>
                    <td>
                        <a href="{{ path('imv_wordlist_show', {'id': wl.id}) }}">{{ wl.name }}</a>
                    </td>
                    <td>
                        {{ wl.count }}
                    </td>
                    <td>
                        {{ wl.createdAt|date(_format_datetime) }}
                    </td>
                    <td>
                        {{ wl.updatedAt|date(_format_datetime) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>Currently not any lists added.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
